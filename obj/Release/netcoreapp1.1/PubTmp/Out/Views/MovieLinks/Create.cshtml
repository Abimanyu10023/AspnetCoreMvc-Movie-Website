@model Movies.Models.MovieLinks

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}






<div class="tab-content">

    <div class="tab-pane active" id="horizontal-form">
        <h3 class="blank1">New Link</h3>
        <form asp-action="Create" method="post"  class="form-horizontal" data-toggle="validator" asp-controller="MovieLinks">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="col-sm-2 control-label">Name</label>
                <div class="col-sm-8">
                    <input required type="text" asp-for="Name">
                </div>
                <div class="col-sm-2 ">
                    <p class="help-block danger" asp-validation-for="Name"></p>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Source" class="col-sm-2 control-label">Source</label>
                <div class="col-sm-8">
                    <input required type="text" asp-for="Source">
                </div>
                <div class="col-sm-2 ">
                    <p class="help-block danger" asp-validation-for="Source"></p>
                </div>
            </div>
            <input asp-for="MovieId" type="hidden" value="@ViewBag.MovieId" />
            <div class="panel-footer">
                <div class="row">
                    <div class="col-sm-8 col-sm-offset-2">
                        <button class="btn-success btn">Submit</button>

                    </div>
                </div>
            </div>

        </form>
    </div>
</div>