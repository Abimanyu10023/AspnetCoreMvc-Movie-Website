@model Movies.Models.Genre

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="tab-content">

    <div class="tab-pane active" id="horizontal-form">

        <form asp-action="Edit" class="form-horizontal" data-toggle="validator" asp-controller="Genres">
            <h3 class="blank1">Edit Genre</h3>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name" class="col-sm-2 control-label">Name</label>
                <div class="col-sm-8">
                    <input required type="text" asp-for="Name">
                </div>
                <div class="col-sm-2 ">
                    <p class="help-block danger" asp-validation-for="Name"></p>
                </div>
            </div>

            <div class="panel-footer">
                <div class="row">
                    <div class="col-sm-8 col-sm-offset-2">
                        <button class="btn-success btn">Submit</button>

                    </div>
                </div>
            </div>

        </form>
    </div>
</div>


